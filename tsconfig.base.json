{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "commonjs",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@clemann-developments/common-endpoint": [
        "libs/common-endpoint/src/index.ts"
      ],
      "@clemann-developments/dtos/expense-tracker-dtos": [
        "libs/dtos/expense-tracker-dtos/src/index.ts"
      ],
      "@clemann-developments/nest/common-auth0": [
        "libs/nest/common-auth0/src/index.ts"
      ],
      "@clemann-developments/node/typeorm/find-paginated-and-sort": [
        "libs/node/typeorm/find-paginated-and-sort/src/index.ts"
      ],
      "@clemann-developments/react/components/interaction/button": [
        "libs/react/components/interaction/button/src/index.ts"
      ],
      "@clemann-developments/react/components/interaction/dropdown-button": [
        "libs/react/components/interaction/dropdown-button/src/index.ts"
      ],
      "@clemann-developments/react/components/tables": [
        "libs/react/components/tables/src/index.ts"
      ],
      "@clemann-developments/react/components/ui-elements": [
        "libs/react/components/ui-elements/src/index.ts"
      ],
      "@clemann-developments/react/forms": ["libs/react/forms/src/index.ts"],
      "@clemann-developments/react/hooks/next/use-auth-guard": [
        "libs/react/hooks/next/use-auth-guard/src/index.ts"
      ],
      "@clemann-developments/react/hooks/use-event-bus": [
        "libs/react/hooks/use-event-bus/src/index.ts"
      ],
      "@clemann-developments/react/hooks/use-modal": [
        "libs/react/hooks/use-modal/src/index.ts"
      ],
      "@clemann-developments/react/hooks/use-scroll-position": [
        "libs/react/hooks/use-scroll-position/src/index.ts"
      ],
      "@clemann-developments/react/hooks/use-window-dimensions": [
        "libs/react/hooks/use-window-dimensions/src/index.ts"
      ],
      "@clemann-developments/theme": ["libs/theme/src/index.ts"]
    }
  },
  "include": ["**/*.ts", "**/*.tsx", "**/*.js", "**/*.jsx", "**/*.d.ts"],
  "exclude": ["node_modules", "tmp"]
}
